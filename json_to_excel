import json
import pandas as pd

# Load JSON
with open("strategies.json", "r", encoding="utf-8") as f:
    strategies = json.load(f)

# Flatten for Excel: convert tags and goals to comma-separated strings
for s in strategies:
    s["tags"] = ", ".join(s["tags"])
    s["goals"] = ", ".join(s["goals"])

# Create DataFrame
df = pd.DataFrame(strategies)

# Export to Excel
df.to_excel("strategies.xlsx", index=False)
print("âœ… Saved strategies.xlsx")

